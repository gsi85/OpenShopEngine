<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="alterComponentService" class="com.openshop.product.alter.DefaultAlterComponentService">
    <constructor-arg name="alterComponentServiceDao">
      <bean class="com.openshop.product.alter.DefaultAlterComponentServiceDao">
        <constructor-arg name="entityManager">
          <bean class="com.openshop.entity.MongoEntityManager">
            <constructor-arg name="objectToJsonParser">
              <bean class="com.openshop.parser.ObjectToJsonParser"/>
            </constructor-arg>
            <constructor-arg name="connectionHolder">
              <bean class="com.openshop.connection.MongoDatabaseConnectionHolder"/>
            </constructor-arg>
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

</beans>
